<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_orto_grami"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dominika.ortogami.OrtoGramiActivity">

    <Button
        android:text="RZ"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/buttonRZ" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:id="@+id/textWordsOG"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textStyle="bold"
 />

    <TextView
        android:text="O PUNKTÓW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textScorePOG"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/buttonŻ"
        android:layout_toStartOf="@+id/buttonŻ" />

    <TextView
        android:text="0 BLĘDÓW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textScoreNOG"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Ó"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="23dp"
        android:id="@+id/buttonÓ"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <Button
        android:text="H"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/buttonH"
        android:layout_alignBaseline="@+id/buttonÓ"
        android:layout_alignBottom="@+id/buttonÓ"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="EN"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/buttonEN"
        android:layout_alignTop="@+id/buttonON"
        android:layout_toRightOf="@+id/buttonÓ"
        android:layout_toEndOf="@+id/buttonÓ"
        android:layout_marginTop="17dp" />

    <Button
        android:text="Ż"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/buttonŻ"
        android:layout_alignBaseline="@+id/buttonRZ"
        android:layout_alignBottom="@+id/buttonRZ"
        android:layout_alignLeft="@+id/buttonH"
        android:layout_alignStart="@+id/buttonH" />

    <Button
        android:text="Ą"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/buttonĄ"
        android:layout_below="@+id/buttonCH"
        android:layout_toRightOf="@+id/buttonŻ"
        android:layout_toEndOf="@+id/buttonŻ"
        android:layout_marginTop="17dp" />

    <Button
        android:text="CH"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/buttonCH"
        android:layout_alignBaseline="@+id/buttonŻ"
        android:layout_alignBottom="@+id/buttonŻ"
        android:layout_toRightOf="@+id/buttonON"
        android:layout_toEndOf="@+id/buttonON" />

    <Button
        android:text="ON"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/buttonON"
        android:layout_above="@+id/buttonRZ"
        android:layout_toRightOf="@+id/buttonH"
        android:layout_toEndOf="@+id/buttonH"
        android:layout_marginBottom="29dp" />

    <Button
        android:text="Ę"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/buttonĘ"
        android:layout_alignTop="@+id/buttonH"
        android:layout_alignLeft="@+id/textScoreNOG"
        android:layout_alignStart="@+id/textScoreNOG"
        android:layout_marginTop="14dp" />

    <Button
        android:text="U"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/buttonU"
        android:layout_alignBaseline="@+id/buttonĄ"
        android:layout_alignBottom="@+id/buttonĄ"
        android:layout_alignLeft="@+id/buttonEN"
        android:layout_alignStart="@+id/buttonEN" />


</RelativeLayout>
