<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_orto_grami"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dominika.ortogami.OrtoGramiActivity">

    <Button
        android:text="Ó"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:id="@+id/buttonÓ" />

    <Button
        android:text="U"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/buttonÓ"
        android:layout_toRightOf="@+id/buttonÓ"
        android:layout_toEndOf="@+id/buttonÓ"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:id="@+id/buttonU" />

    <Button
        android:text="CH"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/buttonU"
        android:layout_toRightOf="@+id/buttonU"
        android:layout_toEndOf="@+id/buttonU"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:id="@+id/buttonCH" />

    <Button
        android:text="H"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/buttonÓ"
        android:layout_toLeftOf="@+id/buttonCH"
        android:layout_toStartOf="@+id/buttonCH"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="35dp"
        android:id="@+id/buttonH" />

    <Button
        android:text="Ą"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/buttonCH"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/buttonĄ" />

    <Button
        android:text="OM"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/buttonH"
        android:layout_toRightOf="@+id/buttonH"
        android:layout_toEndOf="@+id/buttonH"
        android:id="@+id/buttonOM" />

    <Button
        android:text="Ę"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/buttonOM"
        android:layout_toRightOf="@+id/buttonOM"
        android:layout_toEndOf="@+id/buttonOM"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:id="@+id/buttonĘ" />

    <TextView
        android:text="O PUNKTÓW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textWordsOG"
        android:layout_alignStart="@+id/textWordsOG"
        android:id="@+id/textScorePOG"
        android:textSize="15dp"
        android:textStyle="bold"
        />

    <Button
        android:text="EN"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/buttonH"
        android:layout_toLeftOf="@+id/buttonÓ"
        android:layout_toStartOf="@+id/buttonÓ"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/buttonEN" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textWordsOG"
        android:gravity="center"
        android:textSize="45dp"
        android:textStyle="bold"
        android:layout_above="@+id/textScorePOG"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="0 BLĘDÓW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textScoreNOG"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textWordsOG"
        android:layout_alignEnd="@+id/textWordsOG" />

</RelativeLayout>
