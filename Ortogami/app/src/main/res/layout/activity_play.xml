<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.example.dominika.ortogami.PlayActivity">

    <ImageButton
        android:id="@+id/imageOrtoGrami"
        android:background="@drawable/ortogrami"
        android:layout_width="170dp"
        android:layout_height="240dp"
        android:layout_alignTop="@+id/imageOrto"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="playOrtoGrami"
        />

    <ImageButton
        android:id="@+id/imageOrto"
        android:elevation="0dp"
        android:scaleType="fitXY"
        android:layout_width="150dp"
        android:layout_height="220dp"
        android:background="@drawable/orto"
        android:onClick="playOrto"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
